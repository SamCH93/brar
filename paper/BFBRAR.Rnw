        brar <- brar_normal(estimate = estimate, sigma = sigma, pm = pm,
                                 psigma = psigma, pH0 = pH0)
        res <- data.frame("time" = ni, "pH0" = pH0, "prand" = brar$prand,
                          "group" = names(brar$prand))
        rownames(res) <- NULL
        return(res)
    }))
}))


